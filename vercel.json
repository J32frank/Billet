{
  "version": 2,
  "builds": [
    { "src": "billet-backend/server.js", "use": "@vercel/node" },
    {
      "src": "billet-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/billet-backend/server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
